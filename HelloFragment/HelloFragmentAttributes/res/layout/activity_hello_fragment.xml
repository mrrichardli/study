<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false" >

    <fragment
        android:id="@+id/fragmentOne"
        android:name="com.ingphone.hellofragment.FragmentOne"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:stringReferenceValue="@string/string_reference_test"
        app:colorReferenceValue="@color/mRed"
        app:drawableReferenceValue="@drawable/ic_launcher"
        app:referenceValue="@string/app_name"
        app:stringValue="@string/app_name"
        app:colorValue="#f00"
        app:dimensionValue="10dp"
        app:booleanValue="true"
        app:integerValue="100"
        app:floatValue="100"
        app:fractionValue="100%"
        app:enumValue="horizontal"
        app:flagValue="bold|italic" />

    <fragment
        android:id="@+id/fragmentTwo"
        android:name="com.ingphone.hellofragment.FragmentTwo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>